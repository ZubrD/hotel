.search-wrapper
    section.search-sidebar
        form(action="").stay-guest-form
            .stay-guest-form__item
                p.stay-guest-form__title Даты пребывания в отеле 
                input(type="text" placeholder='19 авг - 23 авг').stay-guest-form__input
                span.stay-guest-form__icon expand_more
            .stay-guest-form__item
                p.stay-guest-form__title Гости 
                input(type="text" placeholder='3 гостя, 1 младенец').stay-guest-form__input
                span.stay-guest-form__icon expand_more  
        .slider 
            .slider-title-wrapper 
                .slider-title Диапазон цены
                .slider-label-wrapper
                    label.slider__label 
                        input(type="number" placeholder='5000').slider__input#input-0
                        span.slider__span ₽ -
                    label.slider__label 
                        input(type="number" placeholder='10000').slider__input#input-1  
                        span.slider__span ₽    
            #nouislider
            .slider-bottom-title Стоимость за сутки пребывания в номере
        form(action="").home-rule-form
            .home-rule-form__title Правила дома
            .home-rule-form__item 
                input(type="checkbox" id="smoke").home-rule-form__input
                label(for="smoke").home-rule-form__label Можно курить 
            .home-rule-form__item 
                input(type="checkbox" id="pets").home-rule-form__input
                label(for="pets").home-rule-form__label Можно с питомцами
            .home-rule-form__item 
                input(type="checkbox" id="guests").home-rule-form__input
                label(for="guests").home-rule-form__label Можно пригласить гостей (до 10 человек) 
        form(action="").availability-form
            .availability-form__title Доступность
            .availability-form__item
                input(type="checkbox" id="corridor").availability-form__input
                label(for="corridor").availability-form__label Широкий коридор
                    p.availability-form__text Ширина коридоров в номере не менее 91 см.             
            .availability-form__item 
                input(type="checkbox" id="assistant").availability-form__input
                label(for="assistant").availability-form__label Помощник для инвалидов
                    p.availability-form__text На 1 этаже вас встретит специалист и проводит до номера.                    
        .amenity
            .amenity__title Удобства номера
            form(action="").amenity-form
                input(type="text" placeholder="Укажите количество удобств" sleep=0 bed=0 bath=0 ).amenity-form__input
                span.amenity-form__icon expand_more
            .amenity-block.block-open
                .amenity-item 
                    .amenity-item__title Спальни
                    .amenity-item-buttons
                        button.amenity-item__button.amenity-item__button-minus#minus-sleep -
                        .amenity-item__result#sleep-result 0              
                        button.amenity-item__button#plus-sleep +
                .amenity-item 
                    .amenity-item__title Кровати
                    .amenity-item-buttons
                        button.amenity-item__button.amenity-item__button-minus#minus-bed -
                        .amenity-item__result#bed-result 0              
                        button.amenity-item__button#plus-bed +
                .amenity-item 
                    .amenity-item__title Ванные комнаты
                    .amenity-item-buttons
                        button.amenity-item__button.amenity-item__button-minus#minus-bath -
                        .amenity-item__result#bath-result 0              
                        button.amenity-item__button#plus-bath +                                                
